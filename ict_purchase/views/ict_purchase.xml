<odoo>
    <data>


        <record id="view_ict_sale__order_purchase" model="ir.ui.view">
            <field name="name">ict_sale_order_purchases</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">

                    <button class="oe_stat_button" name="smart_purchase_button"
                            icon="fa-solid fa-calculator"
                            type="object"
                            attrs="{'invisible': [('po_count', '=', 0)]}">
                        <field string="PO count" name="po_count" widget="statinfo"/>
                    </button>

                </xpath>


                <xpath expr="//header//button[@name='action_draft']" position="after">
                    <button name="action_open_create_po_wizard" class="oe_highlight" string="Create PO" type="object"
                            states="sale"/>
                </xpath>

            </field>
        </record>


        <record id="view_ict_purchase_rfq_tree" model="ir.ui.view">
            <field name="name">ict_sale_purchases_rfq_tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree//field[@name='user_id']" position="after">
                    <field name="ref_sale_id"/>
                    <field name="sale_partner_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='effective_date']" position="after">
                    <field name="picking_state" invisible="1"/>
                </xpath>

            </field>
        </record>


        <record id="view_purchase_order_stock_receipt_inherit" model="ir.ui.view">
            <field name="name">po.receipt.status</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree//field[@name='state']" position="after">
                    <field name="receipt_status" invisible="1"/>
                    <field name="picking_state" optional="show" widget="badge" decoration-success="picking_state == 'full'" decoration-info="picking_state == 'partial'" decoration-danger="picking_state == 'pending'"/>
                    <field name="ref_sale_id"/>
                    <field name="sale_partner_id"/>
                </xpath>

            </field>
        </record>

        <record id="view_purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree//field[@name='partner_id']" position="after">
                    <field name="ref_sale_id"/>
                    <field name="sale_partner_id"/>
                </xpath>

            </field>
        </record>


        <record id="view_purchase_order_sale_ref_inherit" model="ir.ui.view">
            <field name="name">po.sale.ref</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet//field[@name='currency_id']" position="after">
                    <field name="ref_sale_id"/>
                    <field name="sale_partner_id"/>
                    <field name="color" invisble="1"/>
                </xpath>

                <xpath expr="//field[@name='partner_ref']" position="attributes">
                    <attribute name="string">Supplier Quote #</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_untaxed']" position="attributes">
                    <attribute name="string">Subtotal</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_tax']" position="attributes">
                    <attribute name="string">GST</attribute>
                </xpath>

            </field>
        </record>


    </data>
</odoo>