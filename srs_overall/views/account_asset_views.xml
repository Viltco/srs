<odoo>

    <record id="view_account_asset_form_inherit" model="ir.ui.view">
        <field name="name">account.asset.form.inherit</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[3]" position="inside">
                <div>
                    <label for="asset_code" name="asset_code"/>
                    <h1>
                        <field name="asset_code"/>
                    </h1>
                </div>
            </xpath>

            <xpath expr="//group/group[4]" position="after">
                <group string="Category">
                    <field name="account_group_id"/>
                    <field name="sub_group"/>
                    <field name="brand"/>
                    <field name="location_id"/>
                    <field name="custodian"/>
                </group>
            </xpath>

        </field>
    </record>

</odoo>